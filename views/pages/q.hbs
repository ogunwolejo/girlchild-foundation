<div class="row justify-content-center">
    <div class="card o-hidden border-0 shadow-lg my-3 col-sm-8 col-lg-6 col-xl-7">
        <div class="card-body p-5 row justify-content-center">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">You can make an impact with little </h1>
            </div>
            <!--- the donation form ---->
            <form id="payment-form" method="POST" action="/donate" class="col-lg-8 col-sm-8 col-xl-9">
                <div class="form-floating mb-3">
                    <input type="text" class=" form-control p-4" name="donation_name" id="donation-name" placeholder="name@example.com" style="border: 0.1rem solid #ddd;">
                    <label for="donation-name">Fullname</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class=" form-control p-4" id="donation-email" name="donation_email" placeholder="name@example.com" style="border: 0.1rem solid #ddd;" required>
                    <label for="donation-email">Email address</label>
                </div>

                <div class="form-floating input-group mb-3">
                    <span class="input-group-text bg-white fs-4 fw-bolder">&#8358;</span>
                    <input type="text" class=" form-control p-4" id="donation-amount" style="border: 0.1rem solid #ddd;" required>
                </div>


                <div id="donation-card" name="donation_card" class=" p-4" style="border: 0.1rem solid #ddd;">
                    <!--Stripe.js injects the Card Element-->
                </div>

                <div class="form-group mt-4 row justify-content-center">
                    <button type="submit" class="btn btn-lg p-3 btn-outline-success col-sm-8 col-lg-6 col-xl-7" style="font-weight: bolder;">Donate</button>
                </div>
            </form>
        </div>
    </div>
</div>