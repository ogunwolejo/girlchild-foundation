<main id="main">
    <section class="inner-page breadcrumbs" id="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="/home">Home</a></li>
                <li>Donations</li>
            </ol>
            <h2>{{bread_crumb_title}}</h2>

            <div class="row mt-4">
                {{#each data}}
                <div class="col-lg-4 col-xl-4 col-md-6 col-sm-12">
                    <div class="p-0 mb-2 card bg-white border-1 border-light">
                        <img src="{{imageFile}}" style="height:300px; max-height:400px;" class="card-img-top" />

                        <div class="card-body p-3">
                            <div class="d-flex flex-row justify-content-between ">
                                <h5 class="card-title align-self-center" style="text-transform:uppercase; color:#009961; font-weight:800">{{fullname}}</h5>

                                <div class="border border-1 card-shadow-5">
                                    <h5 class="text-black p-2" style="color:#009961">{{amount}}</h5>
                                </div>
                            </div>

                            <p class="" style="color:gray; font-weight:800">{{mobileNumber}}</p>

                            <div class="card-text d-flex row justify-content-center">
                                <div class="p-3">
                                    {{content}}
                                </div>
                            </div>

                            <div class="py-3">
                                <div class="">
                                    <a href="/donation/{{id}}" class="btn btn-lg btn-outline-success d-block">Donate</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <div class="pagination my-3 d-flex justify-content-center">
        <ul class="justify-content-center">
            {{#if show_previous_arrow}}
            <li><a href="/donations?page={{previous_page}}"><i class="fas fa-chevron-left"></i></a></li>
            {{/if}}

            {{#if show_previous_page}}
            <li><a href="/donations?page={{previous_page}}">{{previous_page}}</a></li>
            {{/if}}

            <li class="active"><a href="/donations?page={{current_page}}">{{current_page}}</a></li>

            {{#if is_there_next_page}}
            <li class="text-black"><a href="/donations?page={{next_page}}">{{next_page}}</a></li>
            {{/if}}

            {{#if show_last_page}}
            <li><a href="/donations?page={{total_page}}" style="font-weight:800">{{total_page}}</a></li>

            {{/if}}

            {{#if show_next_arrow}}
            <li><a href="/donations?page={{next_page}}"><i class="fas fa-chevron-right"></i> </a></li>
            {{/if}}

        </ul>
    </div>

  

</main><!-- End #main -->

