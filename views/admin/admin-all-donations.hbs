<!-- Begin Page Content -->
<div class="container-fluid">
  <div class="container-fluid mt-2 mb-0">
    <div class="row p-3">
      <h6 class="text-grey-800 my-3" style="text-transform:uppercase">All
        Entries</h6>
    </div>

    <div class="row" id="donee">
      {{#each list}}
        <div id="donee-card" class="col-lg-3 col-xl-3 col-md-6 col-sm-12">
          <div class="p-0 card bg-white border-0 my-2">
            <img
              src="{{imageFile}}"
              style="height: 400px; max-height: 450px;"
              class="card-img-top"
            />

            <div class="card-body p-3">
              <div class="d-flex flex-row justify-content-between">
                <h5
                  class="card-title align-self-center text-primary"
                  style="text-transform:uppercase; font-weight:800"
                >{{fullname}}</h5>
                <div class="border border-1 card-shadow-5">
                  <h5
                    class="text-black p-2 text-primary"
                    id="amount"
                  >{{amount}}</h5>
                </div>
              </div>

              <p
                class="card-text"
                id="phone"
                style="color:gray; font-weight:800"
              >{{mobileNumber}}</p>

              <div class="card-text d-flex row justify-content-center">
                <div class="p-3">
                  {{content}}
                </div>
              </div>

              <div class="p-3">
                <div
                  class="btn btn-lg btn-outline-primary d-block"
                  id="btn-delete"
                >DELETE</div>
              </div>
            </div>

          </div>
        </div>
      {{/each}}
    </div>

    <div class="pagination my-3 d-flex justify-content-center">
      <ul class="justify-content-center">
        {{#if show_previous_arrow}}
          <li><a href="/admin/list?page={{previous_page}}"><i
                class="fas fa-chevron-left"
              ></i></a></li>
        {{/if}}

        {{#if show_previous_page}}
          <li><a
              href="/admin/list?page={{previous_page}}"
            >{{previous_page}}</a></li>
        {{/if}}

        <li class="active"><a
            href="/admin/list?page={{current_page}}"
          >{{current_page}}</a></li>

        {{#if is_there_next_page}}
          <li class="text-black"><a
              href="/admin/list?page={{next_page}}"
            >{{next_page}}</a></li>
        {{/if}}

        {{#if show_last_page}}
          <li><a
              href="/admin/list?page={{total_page}}"
              style="font-weight:800"
            >{{total_page}}</a></li>

        {{/if}}

        {{#if show_next_arrow}}
          <li><a href="/admin/list?page={{next_page}}"><i
                class="fas fa-chevron-right"
              ></i>
            </a></li>
        {{/if}}

      </ul>
    </div>
  </div>

</div>
<!-- /.container-fluid -->
<!--jquery script-->
<script src="/js/jquery-3.5.1.js"></script>