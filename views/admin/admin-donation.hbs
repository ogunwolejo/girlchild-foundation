<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800">Donations</h1>
  <!---the donne form -->
  <div class="container">
    <form
      action="/admin/create-donee-data"
      class="user"
      method="post"
      role="form"
      enctype="multipart/form-data"
    >
      <div class="row">
        <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
          <div class="mt-3 card border border-0 shadow-lg">
            <div class="p-5">
              <div class="container">
                <!-- donee fullname-->
                <div class="form-group mb-4">
                  <input
                    type="text"
                    class="form-control form-control-user form-control-plaintext col-sm-12"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Fullname ..."
                    required
                    name="dFullname"
                  />
                </div>

                <!-- donee email-->
                <div class="form-group mb-4">
                  <input
                    type="email"
                    class="form-control form-control-user form-control-plaintext"
                    id="exampleInputEmail"
                    aria-describedby="textHelp"
                    placeholder="Enter Email Address..."
                    name="dEmail"
                  />
                </div>

                <!-- donee telephone-->
                <div class="form-group mb-4">
                  <input
                    type="tel"
                    class="form-control form-control-user form-control-plaintext"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Mobile Phone number ..."
                    required
                    name="dTelPhone"
                  />
                </div>

                <!-- donee Address-->
                <div class="form-group mb-4">
                  <input
                    type="text"
                    class="form-control form-control-user form-control-plaintext"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Home Address number ..."
                    required
                    name="dAddress"
                  />
                </div>

                <!-- donee amount needed-->
                <div class="form-group mb-4">
                  <input
                    type="text"
                    class="form-control form-control-user form-control-plaintext"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Amount needed ..."
                    required
                    name="dAmountNeeded"
                  />
                </div>

                <!-- donee bank details-->
                <div
                  class="form-group d-flex flex-row justify-content-between mb-4"
                >
                  <input
                    type="text"
                    class="form-control form-control-user col-7 form-control-plaintext"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Account Number ..."
                    required
                    name="dBankNum"
                  />

                  <input
                    type="tel"
                    class="form-control form-control-user col-lg-4 form-control-plaintext"
                    id="exampleInputName"
                    aria-describedby="emailHelp"
                    placeholder="Enter Bank Name"
                    required
                    name="dBankName"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div
          class="offset-xl-1 offset-lg-1 col-lg-6 col-md-12 col-xl-5 col-sm-12"
        >
          <div class="mt-3 card border border-0 shadow-lg" style="height:100%">
            <div class="col-12">
              <div class="p-5">
                <div class="container">
                  <!-- the donee problem -->
                  <div class="form-group mb-3">
                    <textarea
                      name="d-content"
                      class="form-control col-sm-12"
                      rows="15"
                      maxlength="400"
                      required
                      autofocus
                      placeholder="............................................ Not more than a 400 words"
                    ></textarea>
                  </div>

                  <!-- the donee problem -->
                  <div class="mb-3 form-group">
                    <select
                      class="h-50 form-control-lg form-select form-select-lg border"
                      aria-label="Default select example"
                      name="d-category"
                      required
                    >
                      <option selected>Select Category </option>
                      <option value="0">Medical</option>
                      <option value="1">Educational</option>

                    </select>
                  </div>

                  <div class="form-group mb-3">
                    <input
                      class="form-control form-control-file rounded-pill"
                      type="file"
                      id="formFile"
                      name="d-image"
                      required
                    />
                  </div>

                  <div class="form-group col-auto mt-5">
                    <button
                      class="btn btn-lg bg-primary w-100 form-control-user border-0 shadow-lg text-white"
                      type="submit"
                      style="text-transform:uppercase"
                    >Upload Data</button>
                    <div
                      class="mt-2 col-auto container w-50"
                      id="ajax-message"
                    ></div>
                  </div>

                  {{#if isInfo}}

                    <p class="alert alert-success" role="alert">
                      {{successMessage}}
                    </p>

                  {{/if}}

                  {{#if isError}}

                    <p class="alert alert-primary" role="alert">
                      {{errorMessage}}
                    </p>

                  {{/if}}

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

  <div class="container-fluid mt-5 mb-5">
    <div class="row p-3">
      <h6 class="text-grey-800 my-3" style="text-transform:uppercase">Recent
        Entries</h6>
    </div>

    <div class="row" id="donee">
      {{#each list}}
        <div id="donee-card" class="col-lg-6 col-xl-4 col-md-12 col-sm-12 mb-2">
          <div class="p-0 card bg-white border-0">
            <img
              src="{{imageFile}}"
              style="height:500px; max-height:600px;"
              class="card-img-top"
            />

            <div class="card-body p-3">
              <div class="d-flex flex-row justify-content-between">
                <h5
                  class="card-title align-self-center text-primary"
                  style="text-transform:uppercase; font-weight:800"
                >{{fullname}}</h5>
                <div class="border border-1 card-shadow-5">
                  <h5
                    class="text-black p-2 text-primary"
                    id="amount"
                  >{{amount}}</h5>
                </div>
              </div>

              <p
                class="card-text"
                id="phone"
                style="color:gray; font-weight:800"
              >{{mobileNumber}}</p>

              <div class="card-text d-flex row justify-content-center">
                <div class="p-3">
                  {{content}}
                </div>
              </div>

              <div class="p-3">
                <div
                  class="btn btn-lg btn-outline-primary d-block"
                  id="btn-delete"
                >DELETE</div>
              </div>
            </div>

          </div>
        </div>
      {{/each}}

      <!-- the link to donation page-->
      <div class="d-flex justify-content-end mt-5 p-3">
        <a
          href="/admin/list"
          class="text-primary"
          style="font-weight:800; text-transform:uppercase; text-decoration:none"
        >view all <i class="fas fa-chevron-right"></i> </a>
      </div>
    </div>
  </div>
</div>
